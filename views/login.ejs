    <section class="login py-5 border-top-1 gback2" >
        <div class="wrapper fadeInDown">
            <div class="row justify-content-center">
                <div class="align-item-center">
                    
                        <div id="formContent" style="padding-top: 30px;">
                        <h3>Login</h3>
                        <form action="/login" method="POST">
                            <!-- Runned the 'typeof' check because sometime we don't send a status (check unprotected.js for example) -->
                        <% if(typeof status == 'boolean' && status) { %>
                            <div class="my-5 alert alert-success" role="alert">
                                Registered Successfully!
                            </div>
                        <% } %>
                            <fieldset class="p-4" style="padding: inherit;">
                                <input type="text" id="email" placeholder="Email" class="type-1 border p-3 w-100 my-2"
                                    name="email" required />
                               
                                <input type="password" id="password" placeholder="Password"
                                    class="type-1 border p-3 w-100 my-2" name="password" required />
                                <div class="loggedin-forgot">
                                    
                                </div>
                                <button type="submit" id="btnLogin"
                                    class="py-3 px-5 btn-grad text-white border-0 rounded font-weight-bold mt-3 popover-test" style="display: initial;">
                                    Log in
                                </button>
                                <% if(messages.error) { %>
                                    <div class="my-5 alert alert-warning" role="alert">
                                        Incorrect Password or Email Address!
                                    </div>
                                <% } %>
                                    <div id="formFooter">

                                        <a id="hover" class="underlineHover" href="/register" style="color: #9733ee; font-weight: 600;">Dont Have An
                                            Account? Register
                                            Now</a>
                                        </div>
                                        <style >
                                            .underlineHover:after{
                                                background-color: #d723fe;
                                            }

                                        </style>
                            </fieldset>
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </section>


    <%- include('footer-unregistered') %>